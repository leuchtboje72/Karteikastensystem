{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="panel panel-default">
        <ul class="list-group">
            {% for user in users %}

                <li class="list-group-item">
                    <a href = "{{ path('user.edit', {id: user.id}) }}">
                        {{ user.username }}
                    </a>
                </li>

            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}